<main class="container">
	<div class="row">
		<div class="col-sm-12">
			<h1>Contact us</h1>
			<%= form_tag('', method: :post) do %>
				<div class="form-group">
					<label for="firstName">First name</label>
					<input name="contact[first_name]" type="text" class="form-control" id="firstName" required placeholder="First name"<%= "value=\"#{current_user.first_name}\"".html_safe if user_signed_in? %>>
				</div>
				<div class="form-group">
					<label for="lastName">Last name</label>
					<input name="contact[last_name]" type="text" class="form-control" id="lastName" required placeholder="Last name"<%= "value=\"#{current_user.last_name}\"".html_safe if user_signed_in? %>>
				</div>
				<div class="form-group">
					<label for="emailAddress">Email address</label>
					<input name="contact[email]" type="email" class="form-control" id="emailAddress" required placeholder="Enter email"<%= "value=\"#{current_user.email}\"".html_safe if user_signed_in? %>>
				</div>
				<div class="form-group">
					<label for="message">Message</label>
					<textarea name="contact[message]" class="form-control" id="message" rows="4"></textarea>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			<% end %>
		</div>
	</div>
</main>